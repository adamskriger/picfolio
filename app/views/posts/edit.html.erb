

<%= image_tag(@post.image(:medium), class: "img-responsive") %>
<%= @post.caption%>

  <%= simple_form_for @post do |f| %>
 <%= f.input :image %>
 <%= f.input :caption %>
 <%= f.button :submit %>
<% end %>

<button><%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you  want to delete this post?"}%></button>
